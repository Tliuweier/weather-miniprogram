/* pages/airQuality/airQuality.wxss */
.airQuality-content{
  padding: 0 30rpx;
  font-size: 24rpx;
  
}
.aqc-title{
  font-size: 46rpx;
  margin: 10rpx 0;
  color: #4a4a4a;
}
.aqc-location{
  color: #6a6a6a;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.aqc-clearfix{
  font-size: 120rpx;

}
.aqc-tips{
  color: #6a6a6a;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.aqc-list{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 20rpx;
  padding-bottom: 80rpx;
  border-bottom: 1rpx solid #6a6a6a;
}
.aqc-item{
  text-align: center;
  color: #6a6a6a;
}
.green-text{
  color: #32CD32;
  font-size: 30rpx;
}
.tt_tag_level1{
  color: #17cf84;
}
.tt_tag_level2{
  color: #fcbc50;
}
.tt_tag_level3{
  color: #fc834f;
}
.tt_tag_level4{
  color: #fb5f5d;
}
.tt_tag_level5{
  color: #ab6ccd;
}
.tt_tag_level6{
  color: #7d3aab;
}
.fifteen-scroll{
  height: 220px;
  position: relative;
}
.fifteen-chart{
  position: absolute;
  top: 10%;
}
.datelist{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  height: 400rpx;
  padding-left: 20rpx;
}
.dateItem{
  width:70rpx;
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  text-align: center;
  margin-left: 17.9rpx;
}
.hour-title{
  margin-top: 30rpx;
  padding-left: 30rpx;
  font-size: 26rpx;
  color: #636363;
}