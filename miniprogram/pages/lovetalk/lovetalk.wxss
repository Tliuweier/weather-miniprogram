/* pages/lovetalk/lovetalk.wxss */
.background_img {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.body-record{
  position: absolute;
  left: 86%;
  top: 13%;
  width: 250rpx;
  height: 250rpx;
  z-index: 101;
  transform-origin: 4vw 4vw;
  transition: transform 1s ease 0s;
}
.body-round{
  display: flex;
  justify-content: center;
  margin-top: -220rpx;
}
.round-container{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 630rpx;
  height: 630rpx;
  border-radius: 50%;
  overflow: hidden;
}
.round-img{
  width: 630rpx;
  height: 630rpx;
  position: absolute;
  z-index: 100;
}
.singer-img {
  width: 580rpx;
  height: 580rpx;
  border-radius: 50%;
}
.run {
  animation: run 25s linear infinite;
}
@keyframes run {
  0% {
    -webkit-transform: rotate(0deg);
  }
  25% {
    -webkit-transform: rotate(90deg);
  }
  50% {
    -webkit-transform: rotate(180deg);
  }
  75% {
    -webkit-transform: rotate(270deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
  }
}


.title-songName{
  margin-top: 30rpx;
  text-align: center;
  font-weight: 700;
  font-size: 44rpx;
  color: #fff;
}
.title-singeName{
  text-align: center;
  font-weight: 700;
  font-size: 36rpx;
  color: #696969;
}
.share-btn {
  position: absolute;
  right: 0;
  bottom: 35%;
  width: 125rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  text-align: center;
  background: linear-gradient(#FFF0F5,#FFB6C1, #FFC0CB);
  border-radius: 31rpx 0 0 31rpx;
  font-size: 28rpx;
  padding:0;
}
.message-box{
  display: flex;
  flex-direction: column;
}
.meassage-box_padding{
  display: flex;
  flex-direction: column;
  padding:0 100rpx;
}
.chat-item{
  display: flex;
  flex-direction: row;
  margin-bottom: 30rpx;
}
.chat-box {
  position: relative;
  line-height: 60rpx;
  height: 60rpx;
  background: #fff;
  border-radius: 5px;
  /* 圆角 */
  font-size: 30rpx;
  font-weight: 500;
  
}

.chat-box:after {
  content: '';
  position: absolute;
  right: 97%;
  bottom: 0px;
  width: 0;
  height: 0;
  border-width: 20rpx;
  border-style: solid;
  border-color: transparent;
  margin-bottom: 10rpx;
  border-right-width: 20rpx;
  border-right-color: currentColor;
  color: #fff;
}
.chat-text-padding{
  padding: 0 15rpx;
}

.play_suspend {
  display: flex;
  flex-direction: row;
  justify-content: center;

}
.img_play {
  width: 100rpx;
  height: 100rpx;
}
.play_slider{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}
.slider_middle{
  width: 65%;
}

/* 动画 */

.fadeInDown{
  -webkit-animation:fadeInDown 1s .2s ease both;
  animation:fadeInDown 1s .2s ease both;
}

.fadeInDown1{
  -webkit-animation:fadeInDown 1s .5s ease both;
  animation:fadeInDown 1s .5s ease both;
}

.fadeInDown2{
  -webkit-animation:fadeInDown 1s .8s ease both;
  animation:fadeInDown 1s .8s ease both;
}

.fadeInDown3{
  -webkit-animation:fadeInDown 1s 1.1s ease both;
  animation:fadeInDown 1s 1.1s ease both;
}

@-webkit-keyframes fadeInDown {
  0%{
    opacity:0;
    -webkit-transform:translateY(-20px)
  }

  100%{
    opacity:1;
    -webkit-transform:translateY(0)
  }
}
@keyframes fadeInDown{
  0%{
    opacity:0;
    -webkit-transform:translateY(-20px)
  }
  100%{
    opacity:1;
    -webkit-transform:translateY(0)
  }
}
